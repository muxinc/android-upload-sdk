<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuxVideoVODUploadSDK" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green50</item>
        <item name="colorPrimaryVariant">@color/green60</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink40</item>
        <item name="colorSecondaryVariant">@color/pink40</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/gray100</item>
        <item name="backgroundColor">@color/background_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/gray100</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MuxVideoVODUploadSDK.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MuxVideoVODUploadSDK.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MuxVideoVODUploadSDK.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
